<%- include("partials/header.ejs") %>

    <div class="ripple-background">
        <section id="hero">
            <h1>Welcome to Secarik Kertas Blog</h1>
            <p style="font-size: 23px;" class="mt-5"><strong>
                Sharing my love for writing, I've created this blog as a space to explore diverse topics, from insightful reflections to motivation. 
                Let's journey through the world of words, ideas, and perspection together!
            </strong></p>
            <a class="btn btn-warning rounded-pill px-3 mt-3" type="button" href="/create">
                <i class="fas fa-plus"></i>Create Post
            </a>
        </section>
    </div>
    <% if (locals.posts.length > 0) { %>
        <% posts.forEach(post => { %>
            <section id="list-post" class="mt-3">
                <div class="post-content">
                    <div class="post-left">
                        <h2><%= post.category %></h2>
                        <img src="image/body-post.jpg" alt="Post Image">
                    </div>
                    <div class="post-right">
                        <h3><a href="/postingan/<%= post.id %>"><%= post.title %></a></h3>
                        <p><%= post.content %></p>
                        <a type="button" class="btn btn-primary btn-sm" href="/edit/<%= post.id %>">Edit Post</a>
                        <a type="button" class="btn btn-secondary btn-sm" href="/delete/<%= post.id %>">Delete Post</a>
                    </div>
                </div>
            </section>
        <% }); %>
    <% } else { %>
        <h3 class="mt-3">No Post Yet</h3>
        <img src="image/empty-mailbox.png" alt="empty-mailbox Image" style="width: 20%; height: auto; background: none;">
    <% } %>
</div>    
<%- include("partials/footer.ejs") %>